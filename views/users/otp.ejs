  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">OTP Verification</h3>
                <form action="otp" method="post">
                  <div class="form-group">
                    <label>Enter the OTP sent to your mail</label>
                    <input type="text" class="form-control p_input" id="otp" name="otp" required>
                  </div>
                  <div class="form-group d-flex align-items-center justify-content-between">
                    <div class="form-check">
                      <label class="form-check-label">
                        <!-- <input type="checkbox" class="form-check-input"> Remember me </label> -->
                    </div>
                    <!-- <a href="#" class="forgot-pass">Forgot password</a> -->
                  </div>
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn">Verify</button>
                  </div>
                </form>
                <form action="resendOTP" method="post">
                  <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-block enter-btn">Resent OTP</button>
                  </div>
                </form>
                
                  <% if (typeof message !== 'undefined') { %>
                  <p class="successfully"><%= message %></p>
                  <% } %>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
      </div>
      <!-- page-body-wrapper ends -->
